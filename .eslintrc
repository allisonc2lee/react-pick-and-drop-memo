{
    "extends": [
        "react-app",
        "prettier",
        "prettier/react"
    ],
    "plugins": ["prettier"],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "react/prop-types": 0,
        "no-underscore-dangle": 0
    },
    "quotes": [
        2,
        "signle",
        {
            "avoidEscape": true,
            "allowTemplateLiterals": true
        }
    ],
    "globals": {
        "window": true,
        "document": true,
        "localStorage": true,
        "FormData": true,
        "FileReader": true,
        "Blob": true,
        "navigator": true
    },
    "parser": "babel-eslint"
}